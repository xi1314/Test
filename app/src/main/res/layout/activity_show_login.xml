<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_select_login_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/ll_login_select"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="3"
            android:background="#868888"/>
        <TextView
            android:textSize="20dp"
            android:textColor="#868888"
            android:text="选择登录方式"
            android:singleLine="true"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="3"
            android:background="#868888"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_select"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_wxlogin"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/weixin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#868888"
                android:layout_marginTop="11dp"
                android:text="微信登录"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_qqlogin"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/qq"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#868888"
                android:layout_marginTop="11dp"
                android:text="QQ登录"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_mblogin"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/phone_sel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#868888"
                android:layout_marginTop="10dp"
                android:text="手机登录"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_sllogin"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/weibo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#868888"
                android:layout_marginTop="10dp"
                android:text="微博登录"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录即代表你同意"/>
            <TextView
                android:id="@+id/tv_yinsitiaokuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/global"
                android:text="孺子牛服务和隐私条款"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>