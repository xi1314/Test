<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/background_gift_item">

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--用户头像-->
            <com.ruziniu.phonelive.widget.AvatarView
                android:src="@drawable/icon_def_mobil"
                android:id="@+id/av_gift_uhead"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <!--礼物名称和用户昵称显示-->
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/white"
                    android:id="@+id/tv_gift_uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/brightyellow"
                    android:id="@+id/tv_gift_gname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
        <!--礼物图片-->
        <com.ruziniu.phonelive.widget.AvatarView
            android:id="@+id/av_gift_icon"
            android:layout_marginLeft="-40dp"
            android:src="@drawable/icon_def_phone"
            android:layout_width="40dp"
            android:layout_height="40dp" />


    </RelativeLayout>
    <com.ruziniu.phonelive.widget.StrokeTextView
        android:textColor="@color/actionbarbackground"
        android:id="@+id/tv_show_gift_num"
        android:layout_marginLeft="190dp"
        android:textSize="@dimen/text_size_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>