<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:textColor="#858585"
                android:textSize="18dp"
                android:text="手机归属地"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
            <TextView
                android:textColor="#858585"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="中国"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"></View>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#858585"
                android:textSize="18dp"
                android:text="+86"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <EditText
                android:inputType="number"
                android:id="@+id/et_loginphone"
                android:textColorHint="#E2E2E5"
                android:background="@null"
                android:hint="@string/plaseinputphonenum"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/btn_phone_login_send_code"
                android:textColor="@color/white"
                android:text="发验证码"
                android:background="@drawable/btn_yzm_background"
                android:layout_width="80dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"></View>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#858585"
                android:textSize="18dp"
                android:text="验证码"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/et_logincode"
                android:textColorHint="#E2E2E5"
                android:background="@null"
                android:hint="请填写短信验证码"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="50dp" />
            <View
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                ></View>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"></View>
    </LinearLayout>
    <Button
        android:id="@+id/btn_dologin"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_yzm_background"
        android:text="立即登陆"
        android:layout_width="270dp"
        android:layout_height="50dp" />

</LinearLayout>