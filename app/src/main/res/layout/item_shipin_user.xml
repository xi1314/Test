<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:hehe="http://schemas.android.com/apk/res-auto">

<com.ruziniu.phonelive.widget.LoadUrlImageView
    android:layout_margin="3dp"
    android:id="@+id/iv_newest_item_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    hehe:type="round"/>


<RelativeLayout
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="#77000000"
    android:layout_marginLeft="5dp">


    <TextView
        android:visibility="gone"
        android:gravity="center_vertical"
        android:id="@+id/tv_nicheng"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="昵称"
        android:textColor="@color/white"
        android:textSize="13dp" />
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/yan"/>
        <TextView
            android:id="@+id/tv_people_num"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"/>

    </LinearLayout>
</RelativeLayout>
    <com.ruziniu.phonelive.widget.AvatarView
        android:id="@+id/av_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>