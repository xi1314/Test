<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="370dp"
          android:orientation="vertical"
          >
          <LinearLayout
              android:background="@color/white"
              android:weightSum="7"
              android:paddingLeft="10dp"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:orientation="horizontal"
              >
              <LinearLayout
                  android:layout_weight="5"
                  android:layout_width="0dp"
                  android:layout_height="match_parent">
                  <com.ruziniu.phonelive.widget.AvatarView
                      android:id="@+id/iv_live_user_head"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_gravity="center">

                  </com.ruziniu.phonelive.widget.AvatarView>
                  <LinearLayout
                      android:layout_gravity="center"
                      android:layout_marginLeft="10dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <TextView
                          android:singleLine="true"
                          android:ellipsize="end"
                          android:maxEms="8"
                          android:id="@+id/tv_live_nick"
                          android:textColor="@color/black"
                          android:textSize="@dimen/text_size_17"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />
                      <LinearLayout
                          android:id="@+id/ll_location"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                          <ImageView
                              android:src="@drawable/live_map_dark"
                              android:layout_width="10dp"
                              android:layout_height="15dp" />
                          <TextView
                              android:textColor="@color/light_gray2"
                              android:layout_marginLeft="5dp"
                              android:id="@+id/tv_live_local"
                              android:textSize="@dimen/text_size_12"
                              android:maxLines="2"
                              android:ellipsize="end"
                              android:text=""
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />
                       </LinearLayout>
                  </LinearLayout>
              </LinearLayout>
              <View
                  android:visibility="gone"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="fill_parent"></View>
              <LinearLayout
                  android:paddingLeft="10dp"
                  android:layout_marginTop="20dp"
                  android:layout_weight="2"
                  android:layout_width="0dp"
                  android:layout_height="fill_parent"
                  android:orientation="horizontal"
                  android:gravity="bottom">
                  <TextView
                      android:textSize="@dimen/text_size_12"
                      android:id="@+id/tv_live_usernum"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="5dp"
                      android:textColor="@color/light_gray2"/>
                  <TextView
                      android:textColor="@color/light_gray2"
                      android:textSize="@dimen/text_size_12"
                      android:text="@string/lookin"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="5dp"/>
              </LinearLayout>
          </LinearLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <com.ruziniu.phonelive.widget.LoadUrlImageView
                  android:scaleType="centerCrop"
                  android:id="@+id/iv_live_user_pic"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" />
              <LinearLayout
                  android:id="@+id/tv_islive"
                  android:paddingBottom="2dp"
                  android:paddingTop="2dp"
                  android:paddingLeft="6dp"
                  android:paddingRight="6dp"
                  android:layout_marginTop="17dp"
                  android:layout_marginRight="20dp"
                  android:layout_alignParentRight="true"
                  android:layout_width="wrap_content"
                  android:background="@drawable/background_zhibo"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <ImageView
                      android:layout_width="10dp"
                      android:layout_height="10dp"
                      android:layout_gravity="center_vertical"
                      android:src="@drawable/icon_play"/>
                  <TextView
                      android:id="@+id/tv_live"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="直播中"
                      android:textColor="@color/white"
                      android:textSize="13dp"
                      android:layout_marginLeft="2dp"
                      android:layout_gravity="center_vertical"
                      />
                  </LinearLayout>
          </RelativeLayout>

      </LinearLayout>
    <TextView
        android:visibility="gone"
        android:padding="7dp"
        android:background="@color/white"
        android:id="@+id/tv_hot_room_title"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:background="@color/list_divider_color"
        android:layout_width="match_parent"
        android:layout_height="7dp"></View>

</LinearLayout>