<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/room_pop_up"
    android:gravity="center"
    android:padding="10dp"
    >
    <LinearLayout
        android:onClick="share1"
        android:id="@+id/ll_live_shar_qqzone"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/room_qqzone_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:text="QQ空间"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:onClick="share1"
        android:id="@+id/ll_live_shar_qq"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/room_qq_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:text="QQ"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:onClick="share1"
        android:id="@+id/ll_live_shar_sinna"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/room_weibo_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:text="微博"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:onClick="share1"
        android:id="@+id/ll_live_shar_pyq"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/room_timeline_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:text="朋友圈"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:onClick="share1"
        android:id="@+id/ll_live_shar_wechat"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/room_wechat_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:text="微信"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>



</LinearLayout>