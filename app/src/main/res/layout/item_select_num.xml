<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        >
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/me_myaccount_reddiamond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_diamondsnum"
                    android:text="20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_price_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新人礼包,仅此一次机会"/>
        </LinearLayout>
        <LinearLayout

            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <TextView
                android:gravity="center"
                android:id="@+id/bt_preice_text"
                android:textColor="@color/actionbarbackground"
                android:text="1.00"
                android:background="@drawable/btn_diamonds_num"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="40dp"
               />
        </LinearLayout>


    </RelativeLayout>
    <View
        style="@style/h_line"
        android:layout_width="fill_parent"
        />
</LinearLayout>