<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <View
        android:layout_marginTop="20dp"
        style="@style/h_line" />
    <RelativeLayout
        android:id="@+id/rl_userHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/space_16" >

        <TextView
            android:id="@+id/tv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_4"
            android:text="头像"
            android:textSize="@dimen/text_size_16" />
        <com.ruziniu.phonelive.widget.AvatarView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/av_userHead"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_next"/>
    </RelativeLayout>

    <View
        style="@style/h_line" />

    <View
        android:layout_marginTop="30dp"
        style="@style/h_line" />

    <RelativeLayout
        android:id="@+id/rl_userNick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/space_16" >

        <TextView
            android:id="@+id/tv_qiaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_4"
            android:text="昵称"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/tv_userNick"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16" />
        <ImageView
            android:id="@+id/iv_nick2"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_next"/>
    </RelativeLayout>

    <View
        style="@style/h_line" />

    <RelativeLayout
        android:id="@+id/rl_userSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/space_16" >

        <TextView
            android:id="@id/tv_qiaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_4"
            android:text="签名"
            android:textSize="@dimen/text_size_16"
            />

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="180dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/tv_userSign"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16" />
        <ImageView
            android:id="@+id/iv_sign3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_next"/>
    </RelativeLayout>
    <View
        style="@style/h_line" />
    <RelativeLayout
        android:id="@+id/rl_userSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/space_16" >

        <TextView
            android:id="@id/tv_qiaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_4"
            android:text="性别"
            android:textSize="@dimen/text_size_16"
            />

        <ImageView
            android:layout_marginRight="20dp"
            android:src="@drawable/global_female"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_info_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_next"/>
    </RelativeLayout>
    <View
        style="@style/h_line" />


</LinearLayout>